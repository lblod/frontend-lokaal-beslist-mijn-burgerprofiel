<li>
  {{! template-lint-disable no-invalid-interactive }}
  <article class="c-agenda-item-card" {{on "click" this.goToAgendaItem}}>
    <AuHeading @level="2" @skin="4">
      <AuLink @route="agenda-items.agenda-item" @model={{@item.id}} class="link-without-line action-sdk-color">
        {{@item.titleResolved}}
      </AuLink>
    </AuHeading>
    {{#if @item.description}}
      <p class="au-u-base c-agenda-item-card__content">{{@item.description}}</p>
    {{/if}}
    <div class="au-u-margin-top-tiny au-u-muted">
      {{@item.dateFormatted}}
      •
      {{@item.governingBodyClassificationNameResolved}}
      {{#if this.showMunicipality}}
        •
        {{@item.municipality}}
      {{/if}}
    </div>
  </article>
</li>