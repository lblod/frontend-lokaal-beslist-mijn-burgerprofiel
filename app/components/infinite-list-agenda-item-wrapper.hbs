{{#let this.itemsService as |loader|}}
  {{#if loader.hasErroredAgendaItems}}
    <Oops @title="Oeps!" @content="Er is iets fout gelopen!" />
  {{else if (and loader.fetchItems.isRunning (not loader.items))}}
    <LoaderFullPage @content="Agendapunten aan het laden" />
  {{else if loader.items}}
    <InfiniteList
      @loadMore={{loader.loadMoreItems}}
      @isLoading={{loader.fetchItems.isRunning}}
      @itemsShown={{loader.items.length}}
      @itemsAmount={{loader.totalItemCount}}
    >
      {{#each loader.items as |item|}}
        <AgendaItemCard @item={{item}} />
      {{/each}}
    </InfiniteList>
  {{else}}
    <div class="au-o-box">
      <AuAlert
        @size="small"
        @skin="warning"
        @icon="info-circle"
        @title="Er werden geen zoekresultaten gevonden."
      />
    </div>
  {{/if}}
{{/let}}