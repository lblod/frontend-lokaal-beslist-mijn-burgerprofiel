<div
  class="{{@class}}
    u-overflow-padding u-overflow-y-scroll infinite-scroll-height"
  {{on "scroll" this.scroll}}
  tabindex="-1"
>
  <ul class="c-infinite-list">
    {{yield}}
  </ul>
  <div class="au-u-flex au-u-flex--center au-u-padding-top">
    {{#if this.showScrollToTopButton}}
      <div id="scroll-to-top-button">
        <AuBadge
          {{on "click" this.scrollToTop}}
          @skin="action"
          @icon="arrow-up"
          class="accordion-badge icon-color--primary"
        />
      </div>
    {{/if}}
    {{#if @isLoading}}
      <AuLoader @hideMessage={{true}}>Aan het laden</AuLoader>
    {{else if this.moreDataToLoad}}
      <AuButton
        @icon="add"
        @skin="secondary"
        @width="block"
        {{on "click" this.loadMore}}
      >Laad meer</AuButton>
    {{/if}}
  </div>
</div>