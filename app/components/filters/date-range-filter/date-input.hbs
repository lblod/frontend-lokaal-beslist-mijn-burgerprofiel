<AuDatePicker
  @alignment={{this.alignment}}
  @id={{this.id}}
  @value={{@value}}
  @min={{@min}}
  @max={{@max}}
  @error={{gt @errorMessage.length 0}}
  @disabled={{@disabled}}
  @onChange={{@onChange}}
/>

{{#if @errorMessage}}
  {{#each @errorMessage as |message|}}
    <AuHelpText @error={{true}}>{{message}}</AuHelpText>
  {{/each}}
{{/if}}